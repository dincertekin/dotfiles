{
    "debug.console.fontSize": 18,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontFamily": "JetBrains Mono, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.smoothScrolling": true,
    "editor.unicodeHighlight.ambiguousCharacters": false, // To fix Turkish characters in en_US locale
    "explorer.autoReveal": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true, // Remove unnecessary spaces when file saved
    "javascript.updateImportsOnFileMove.enabled": "always",
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontFamily": "JetBrains Mono, monospace",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.smoothScrolling": true,
    "window.commandCenter": false,
    "window.zoomLevel": 1,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.smoothScrolling": true,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.startupEditor": "none", // Disable welcome screen
}
